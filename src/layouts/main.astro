---
import '@/styles/tailwind.css'
type Props = {
	title: string
}
const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	</head>
	<body class="bg-background text-primary antialiased ">
		<slot />
	</body>
</html>
